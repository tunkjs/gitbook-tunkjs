{
    "title": "tunkjs中文文档",
    "description": "tunkjs入门教程、深入详解、实例说明、tunk相关组件使用说明",
    "author": "steven-JC",
    "output.name": "site",
    "language": "zh-hans",
    "gitbook": "3.2.3",
    "root": ".",
    "structure": {
        "readme": "README.md"
    }, 

    "plugins": [
        "fontsettings",
        "splitter",
        "atoc",
        "-search",
        "search-plus@^0.0.11",
        "github@^2.0.0",
        "toggle-chapters"
    ],

    "styles": {
        "website": "css/website.css"
    },

    "pluginsConfig": {
        "fontsettings": {
            "theme": "white",
            "size":  1
        },
        "github": {
            "url": "https://github.com/tunkjs"
        },
        "atoc": {
            "addClass": true,
            "className": "toc"
        }
    }
}